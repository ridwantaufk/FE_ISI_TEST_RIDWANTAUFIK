generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     String // "Lead" atau "Team"

  leadTasks Task[] @relation(name: "LeadRelation")
  teamTasks Task[] @relation(name: "TeamRelation")
}

model Task {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leadId String?
  teamId String?

  lead User?     @relation(name: "LeadRelation", fields: [leadId], references: [id])
  team User?     @relation(name: "TeamRelation", fields: [teamId], references: [id])
  logs TaskLog[] // ✅ Relasi balik ke TaskLog
}

model TaskLog {
  id          String   @id @default(uuid())
  taskId      String
  action      String
  description String?
  timestamp   DateTime @default(now())
  message     String   @default("")
  task        Task     @relation(fields: [taskId], references: [id]) // ✅ Sudah benar
}
